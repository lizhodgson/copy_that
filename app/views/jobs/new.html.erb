<h1>Need a Writer?</h1>

<%= form_for @job do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :client_name %><br>
    <%= f.text_field :client_name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Please describe document type. IE: web copy, brochure text, cover letter, etc.", size: '40x6' %>
  </p>

  <p>
    <%= f.label :deadline %><br>
    <%= f.date_field :deadline %>
  </p>

   <p>
    <%= f.label :pay %><br>
    <%= f.text_field :pay %>
  </p>
  
  <p>
    <%= f.submit 'post job' %>
  </p>
<% end %>

<%= link_to 'Back', jobs_path %>


 
